#!/bin/bash
startServerCmd=(devpi-server)
startServerCmd+=("--role")
startServerCmd+=("standalone")
startServerCmd+=("--host")
startServerCmd+=("0.0.0.0")
startServerCmd+=("--port")
startServerCmd+=("3141")
startServerCmd+=("--serverdir")
startServerCmd+=("/devpi/data")
startServerCmd+=("--storage")
startServerCmd+=("sqlite")
startServerCmd+=("--secretfile")
startServerCmd+=("/devpi/data/.__secrets")
startServerCmd+=("--restrict-modify")
startServerCmd+=("root")
startServerCmd+=("--logger-cfg")
startServerCmd+=("/devpi/logging.yaml")
startServerCmd+=("--absolute-urls")
startServerCmd+=("--start")

"${startServerCmd[@]}"
