#!/bin/bash
stopServerCmd=(devpi-server)
stopServerCmd+=("--role")
stopServerCmd+=("standalone")
stopServerCmd+=("--host")
stopServerCmd+=("0.0.0.0")
stopServerCmd+=("--port")
stopServerCmd+=("3141")
stopServerCmd+=("--serverdir")
stopServerCmd+=("/devpi/data")
stopServerCmd+=("--storage")
stopServerCmd+=("sqlite")
stopServerCmd+=("--secretfile")
stopServerCmd+=("/devpi/data/.__secrets")
stopServerCmd+=("--restrict-modify")
stopServerCmd+=("root")
stopServerCmd+=("--logger-cfg")
stopServerCmd+=("/devpi/logging.yaml")
stopServerCmd+=("--absolute-urls")
stopServerCmd+=("--stop")

"${stopServerCmd[@]}"
