#!/bin/bash

PIDFILE=/var/run/devpi.pid

devpi() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" "${arguments[@]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

backup() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /devpi/scripts/backup "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

restore() {
    arguments=( "$@" )

    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec "$CID" /devpi/scripts/restore "${arguments[1]}"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

bash() {
    CID=$(cat "$PIDFILE")
    if [ "$CID" == "" ];
    then
        exit 1
    fi

    docker exec -it "$CID" sh -c "cd /devpi && /bin/bash"
    if [ $? -ne 0 ];
    then
        exit 2
    fi
}

case $1 in
    devpi)
        devpi $@
        ;;
    backup)
        backup $@
        ;;
    restore)
        restore $@
        ;;
    bash)
        bash
        ;;
    *)
        echo "Usage: $0 (devpi | backup | restore | bash)"
        ;;
esac
